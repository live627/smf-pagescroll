<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<name>Pagescroll</name>
	<id>live627:pagescroll</id>
	<version>1.0</version>
	<type>modification</type>

	<install for="2.0 - 2.99.99">
		<database>install.php</database>
		<require-file name="Pagescroll.php" destination="$sourcedir" />
		<require-file name="pagescroll.css" destination="$themedir/css" />
		<require-file name="pagescroll.js" destination="$themedir/scripts" />
	</install>

	<uninstall for="2.0 - 2.99.99">
		<code>uninstall-required.php</code>
		<remove-file name="$sourcedir/Pagescroll.php" />
		<remove-file name="$themedir/css/pagescroll.css" />
		<remove-file name="$themedir/scripts/pagescroll.js" />
	</uninstall>

</package-info>
